package com.javadev.learnspringframwork.springBean;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

record Person(String name, int age, Address address) {

}

record Address(String firstLine, String city) {

}

@Configuration
public class HelloWorldConfiguration {

	@Bean
	public String name() {
		return "Ranga";
	}

	@Bean
	public int age() {
		return 12;
	}

	@Bean
	Person person() {
		var person = new Person("Ibtihaj", 22, new Address("hardcode street", "hardcode city"));
		person.age();
		person.name();
		return person;
	}

	@Bean
	Person person2MethodCall() {
		return new Person(name(), age(), address());

	}

	@Bean
	Person person3Parameters(String name, int age, Address address2) {
		return new Person(name, age, address2);

	}

	@Bean(name = "address2")
	Address address() {
		return new Address("BACKERS STREET", "LONDON");
	}
}
